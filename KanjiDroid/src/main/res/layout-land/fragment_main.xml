<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thedespite.kanjidroid.MainActivity.KanaPracticeFragment"
    android:importantForAccessibility="yes">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adTopAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adUnitId="ca-app-pub-5939868031369014/2712526284"
        ads:adSize="BANNER"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userEntry"
        android:autoText="false"
        android:editable="true"
        android:enabled="true"
        android:importantForAccessibility="yes"
        android:visibility="visible"
        android:hint="@string/type_here"
        android:capitalize="none"
        android:gravity="center"
        android:linksClickable="false"
        android:singleLine="true"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:inputType="none"
        android:textSize="32dp"
        android:layout_alignBottom="@+id/kana"
        android:layout_toRightOf="@+id/kana" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kana"
        android:importantForAccessibility="yes"
        android:id="@+id/kana"
        android:textSize="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="debug.."
        android:id="@+id/tvDebug"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvMessageUser"
        android:textColor="#0055FF"
        android:visibility="invisible"
        android:text="message"
        android:layout_below="@+id/kana"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
